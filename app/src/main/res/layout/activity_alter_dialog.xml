<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_login"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="5dip"
        android:background="@drawable/edt_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="频率:"
            android:textColor="#fff"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/frequency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入频率值"
            android:inputType="number|numberDecimal"
            android:padding="5dp"
            android:textColor="#fff"
            android:textColorHint="@color/gray_8f"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="U最值:"
            android:textColor="#fff"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/amplifier_u"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入U的最大值"
            android:inputType="number|numberDecimal"
            android:padding="5dp"
            android:textColor="#fff"
            android:textColorHint="@color/gray_8f"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="5dip"
        android:background="@drawable/edt_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="速度:"
            android:textColor="#fff"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入速度值"
            android:inputType="number|numberDecimal"
            android:padding="5dp"
            android:textColor="#fff"
            android:textColorHint="@color/gray_8f"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="V最值:"
            android:textColor="#fff"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/amplifier_v"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入V的最大值"
            android:inputType="number|numberDecimal"
            android:padding="5dp"
            android:textColor="#fff"
            android:textColorHint="@color/gray_8f"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="5dip"
        android:background="@drawable/edt_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="幅值:"
            android:textColor="#fff"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/amplifier_y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入y的最大值"
            android:inputType="number|numberDecimal"
            android:padding="5dp"
            android:textColor="#fff"
            android:textColorHint="@color/gray_8f"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="W最值:"
            android:textColor="#fff"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/amplifier_w"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入W的最大值"
            android:inputType="number|numberDecimal"
            android:padding="5dp"
            android:textColor="#fff"
            android:textColorHint="@color/gray_8f"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/parameter_setting"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:background="@drawable/edt_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="设置"
        android:textColor="#fff"
        android:textSize="15sp" />

</LinearLayout>

